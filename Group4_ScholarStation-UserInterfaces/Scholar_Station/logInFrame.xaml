<Page x:Class="Scholar_Station.logInFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Scholar_Station"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="logInFrame" Width="525" Height="350">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="347*"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="userSelectBox" HorizontalAlignment="Left" Margin="177,132,0,0" Grid.Row="1" VerticalAlignment="Top" Width="144">
            <ComboBox.Effect>
                <DropShadowEffect/>
            </ComboBox.Effect>
        </ComboBox>
        <Button x:Name="LogInButton" Content="Log In" HorizontalAlignment="Left" Margin="188,221,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Click="LogInButton_Click" FontWeight="Bold">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Label x:Name="label" Content="Select User" HorizontalAlignment="Left" Margin="175,106,0,0" Grid.Row="1" VerticalAlignment="Top" Width="133" RenderTransformOrigin="0.509,0.553" FontWeight="Bold"/>
        <Label x:Name="label1" Content="User Sign In" HorizontalAlignment="Left" Margin="175,64,0,0" Grid.Row="1" VerticalAlignment="Top" Width="155" FontSize="24" FontWeight="Bold"/>
        <TextBox x:Name="emailBox" HorizontalAlignment="Left" Height="23" AcceptsReturn="False" Margin="177,179,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" >
            <TextBox.Effect>
                <DropShadowEffect/>
            </TextBox.Effect>
        </TextBox>
        <Label x:Name="label_Copy" Content="Enter Email" HorizontalAlignment="Left" Margin="175,153,0,0" Grid.Row="1" VerticalAlignment="Top" Width="133" RenderTransformOrigin="0.509,0.553" FontWeight="Bold"/>
    </Grid>
</Page>
